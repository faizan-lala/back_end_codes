<!DOCTYPE html>
<html lang="en">
<head>
  
  <%-include('./Partial/boot.ejs');%>
</head>
<body>
    <%-include('./Partial/menu.ejs');%>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10 m-auto">
                <form action="/addproduct" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="">Name</label>
                        <input type="text" name="name" id="name" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="">Prize</label>
                        <input type="text" name="prize" id="prize" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="">Image</label>
                        <input type="file" name="image" id="image" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="">Description</label>
                        <textarea name="description" id="description" cols="1" rows="1" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-danger">Add Product</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
